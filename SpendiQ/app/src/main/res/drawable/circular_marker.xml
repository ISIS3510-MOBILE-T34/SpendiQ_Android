<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle (Account color) -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@android:color/darker_gray" /> <!-- Default outer circle color (replace with account color dynamically) -->
            <size android:width="48dp" android:height="48dp" />
        </shape>
    </item>

    <!-- Inner Circle (Income/Expense) -->
    <item android:right="12dp" android:left="12dp" android:top="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- White inner circle for contrast -->
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>
</layer-list>
